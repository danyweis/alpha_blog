<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
            <% if @article.errors.any? %>
            <h2>The following errors prevented the acticle from being saved:</h2>
            <ul>
                <% @article.errors.full_messages.each do |message|%>
                    <li>
                        <%= message%> 
                    </li>
                <% end %>
            </ul>
            <% end %>


            <%= form_with(model: @article, class: "shadow p-3 mb-5 bg-info rounded", local: true) do |form|%>

                <div class="form-group row">
                    <%= form.label :title, class: "col-sm-2 col-form-label" %>
                    
                    <div class="col-sm-10">
                        <%= form.text_field :title, class:"form-control shadow rounded mb-3", placeholder: "Title of the article ..." %>
                    </div>
                </div>
                <div class="form-group row">
                <%= form.label :description, class: "col-sm-2 col-form-label" %>
                    <div class="col-sm-10">
                        <%= form.text_area :description, rows:10, class: "form-control shadow rounded mb-3", placeholder: "Description of the article ..."%>
                    </div>
                </div>

                <div class="form-group d-flex justify-content-center">
                    <%= form.submit class: "btn btn-outline-light" %>
                </div>

            <% end %>
        </div>
        <%= link_to '[ Back to the articles listings ]', articles_path, class: "text-center"%>
    </div>
</div>